$(function(){
	$('form').submit(function(){
		
		// Test for  numeric field		
		if ( $('input.numeric').val() ) {
			var $a = $('.numeric').val();			
			if( !/^\d+$/.test($a) ) {
				$('.num_error').html("Այստեղ կարող է լինել միայն թիվ");
				return false;
			}
		}
	  
		
		
		// Test	for not empty fields	
		if( !$('.not_empty').val() ) {
			$('.empty_error').html("Այս դաշտը չպետք է դատարկ լինի");
			return false;		
			}
		
		// Test for mail fields 
		if ( $('input.mail').val() ) {
			var $mail = $('.mail').val();
			if( !/^.+?@\w+?\.\w\w\w?$/.test($mail) ) {
				$('.mail_error').html("Սա նման չէր էլէկտրոնային հասցեին");
				return false;				
				}			
			}
		
		// Test for latin 
		if ( $('input.latin').val() ) {
			var $latin = $('.latin').val();
			if( !/^[a-zA-Z\d-]+$/.test($latin) ) {
				$('.latin_error').html("Միայն լատինատառ");
				return false;				
				}			
			}
		
		return true;
		});
});